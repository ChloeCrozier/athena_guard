{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "AthenaGuard Cluster Security Dashboard",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 2,
    "refresh": "30s",
    "panels": [
      {
        "type": "time_series",
        "title": "Failed SSH Logins",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(login_failure_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "type": "time_series",
        "title": "Successful SSH Logins",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(login_success_total[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Logged-In Users",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "logged_in_users",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Sudo Commands (Total)",
        "gridPos": {
          "x": 3,
          "y": 4,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "sudo_command_total",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Open TCP Ports",
        "gridPos": {
          "x": 6,
          "y": 4,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "open_ports_total",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "External Connections",
        "gridPos": {
          "x": 9,
          "y": 4,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "connections_external",
            "refId": "A"
          }
        ]
      },
      {
        "type": "bargauge",
        "title": "Sudo Commands by User",
        "gridPos": {
          "x": 0,
          "y": 7,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "sudo_command_user_total",
            "refId": "A"
          }
        ]
      },
      {
        "type": "bargauge",
        "title": "Login Failures by User",
        "gridPos": {
          "x": 6,
          "y": 7,
          "w": 6,
          "h": 5
        },
        "targets": [
          {
            "expr": "login_failure_user_total",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Zombie Processes",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "zombie_processes_total",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Home Dir Usage (KB)",
        "gridPos": {
          "x": 3,
          "y": 12,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "home_dir_size_kb",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Repeated Failed IPs",
        "gridPos": {
          "x": 6,
          "y": 12,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "repeat_failed_login_sources",
            "refId": "A"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Invalid User Logins",
        "gridPos": {
          "x": 9,
          "y": 12,
          "w": 3,
          "h": 3
        },
        "targets": [
          {
            "expr": "invalid_user_login_attempts",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "overwrite": true
}

